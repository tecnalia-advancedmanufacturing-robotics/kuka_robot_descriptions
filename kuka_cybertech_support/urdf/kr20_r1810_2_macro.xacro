<?xml version="1.0"?>
<robot xmlns:xacro="http://wiki.ros.org/xacro">
    <xacro:macro name="kuka_kr20_r1810_2_robot" params="prefix package_name">
        <link name="${prefix}base_link">
            <visual >
                <geometry >
                    <mesh filename="package://${package_name}/meshes/kr20_r1810_2/visual/base_link.dae" />
                </geometry>
            </visual>
            <collision >
                <geometry >
                    <mesh filename="package://${package_name}/meshes/kr20_r1810_2/collision/base_link.stl" />
                </geometry>
            </collision>
        </link>
        <link name="${prefix}link_1">
            <visual >
                <geometry >
                    <mesh filename="package://${package_name}/meshes/kr20_r1810_2/visual/link_1.dae" />
                </geometry>
            </visual>
            <collision >
                <geometry >
                    <mesh filename="package://${package_name}/meshes/kr20_r1810_2/collision/link_1.stl" />
                </geometry>
            </collision>
        </link>
        <link name="${prefix}link_2">
            <visual >
                <geometry >
                    <mesh filename="package://${package_name}/meshes/kr20_r1810_2/visual/link_2.dae" />
                </geometry>
            </visual>
            <collision >
                <geometry >
                    <mesh filename="package://${package_name}/meshes/kr20_r1810_2/collision/link_2.stl" />
                </geometry>
            </collision>
        </link>
        <link name="${prefix}link_3">
            <visual >
                <geometry >
                    <mesh filename="package://${package_name}/meshes/kr20_r1810_2/visual/link_3.dae" />
                </geometry>
            </visual>
            <collision >
                <geometry >
                    <mesh filename="package://${package_name}/meshes/kr20_r1810_2/collision/link_3.stl" />
                </geometry>
            </collision>
        </link>
        <link name="${prefix}link_4">
            <visual >
                <geometry >
                    <mesh filename="package://${package_name}/meshes/kr20_r1810_2/visual/link_4.dae" />
                </geometry>
            </visual>
            <collision >
                <geometry >
                    <mesh filename="package://${package_name}/meshes/kr20_r1810_2/collision/link_4.stl" />
                </geometry>
            </collision>
        </link>
        <link name="${prefix}link_5">
            <visual >
                <geometry >
                    <mesh filename="package://${package_name}/meshes/kr20_r1810_2/visual/link_5.dae" />
                </geometry>
            </visual>
            <collision >
                <geometry >
                    <mesh filename="package://${package_name}/meshes/kr20_r1810_2/collision/link_5.stl" />
                </geometry>
            </collision>
        </link>
        <link name="${prefix}link_6">
            <visual >
                <geometry >
                    <mesh filename="package://${package_name}/meshes/kr20_r1810_2/visual/link_6.dae" />
                </geometry>
            </visual>
            <collision >
                <geometry >
                    <mesh filename="package://${package_name}/meshes/kr20_r1810_2/collision/link_6.stl" />
                </geometry>
            </collision>
        </link>
        <joint name="${prefix}joint_1" type="revolute">
            <parent link="${prefix}base_link" />
            <child link="${prefix}link_1" />
            <origin rpy="0.0 -0.0 0.0" xyz="0.0 0.0 0.28" />
            <axis xyz="0 0 -1"/>
            <limit lower="${radians(-185)}" upper="${radians(185)}" effort="0" velocity="${radians(200)}"/>
        </joint>
        <joint name="${prefix}joint_2" type="revolute">
            <parent link="${prefix}link_1" />
            <child link="${prefix}link_2" />
            <origin xyz="0.16 0.0 0.24" rpy="0.0 -0.0 0.0" />
            <axis xyz="0 1 0"/>
            <limit lower="${radians(-185)}" upper="${radians(65)}" effort="0" velocity="${radians(175)}"/>
        </joint>
        <joint name="${prefix}joint_3" type="revolute">
            <parent link="${prefix}link_2" />
            <child link="${prefix}link_3" />
            <origin xyz="0.78 0.0 0.0" rpy="0.0 0.0 0.0" />
            <axis xyz="0 1 0"/>
            <limit lower="${radians(-138)}" upper="${radians(175)}" effort="0" velocity="${radians(190)}"/>
        </joint>
        <joint name="${prefix}joint_4" type="revolute">
            <parent link="${prefix}link_3" />
            <child link="${prefix}link_4" />
            <origin rpy="0.0 -0.0 0.0" xyz="0.3 0.0 0.15" />
            <axis xyz="-1 0 0"/>
            <limit lower="${radians(-350)}" upper="${radians(350)}" effort="0" velocity="${radians(430)}"/>
        </joint>
        <joint name="${prefix}joint_5" type="revolute">
            <parent link="${prefix}link_4" />
            <child link="${prefix}link_5" />
            <origin rpy="0.0 -0.0 0.0" xyz="0.56 0.0 0.0" />
            <axis xyz="0 1 0"/>
            <limit lower="${radians(-130)}" upper="${radians(130)}" effort="0" velocity="${radians(430)}"/>
        </joint>
        <joint name="${prefix}joint_6" type="revolute">
            <parent link="${prefix}link_5" />
            <child link="${prefix}link_6" />
            <origin rpy="0.0 0.0 0.0" xyz="0.153 0.0 0.0" />
            <axis xyz="-1 0 0"/>
            <limit lower="${radians(-350)}" upper="${radians(350)}" effort="0" velocity="${radians(630)}"/>
        </joint>

        <link name="${prefix}flange"/>
        <joint name="${prefix}link_6-flange" type="fixed">
            <parent link="${prefix}link_6"/>
            <child link="${prefix}flange"/>
            <origin xyz="0.027 0 0" rpy="0 0 0"/>
        </joint>

        <!-- ROS base_link to KUKA $ROBROOT coordinate system transform -->
        <link name="${prefix}base"/>
        <joint name="${prefix}base_link-base" type="fixed">
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <parent link="${prefix}base_link"/>
            <child link="${prefix}base"/>
        </joint>

        <!-- This frame corresponds to the $TOOL coordinate system in KUKA KRC controllers -->
        <link name="${prefix}tool0"/>
        <joint name="${prefix}flange-tool0" type="fixed">
            <parent link="${prefix}flange"/>
            <child link="${prefix}tool0"/>
            <origin xyz="0 0 0" rpy="0 ${radians(90)} 0"/>
        </joint>

    </xacro:macro>
</robot>
